{
  "name": "OAuth 2.0 Grant Management API",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainer-community/devcontainer-features/deno.com:1": {}
  },

  "forwardPorts": [3000, 4004, 8080, 5173],
  "portsAttributes": {
    "3000": { "label": "React Router Dev Server", "onAutoForward": "notify" },
    "4004": { "label": "CDS OData Service", "onAutoForward": "notify" },
    "8080": { "label": "Production Server", "onAutoForward": "silent" },
    "5173": { "label": "Vite Dev Server", "onAutoForward": "notify" }
  },
  "customizations": {
    "jetbrains": {
      "settings": {
        "Docker:app:DockerSettings.dockerComposePath": "/usr/local/bin/docker",
        "Docker:app:DockerSettings.dockerPath": "/usr/local/bin/docker",
        "Git4Idea:app:Git-Application-Settings.use_credential_helper": true,
        "JavaScript:app:JSEditorOptions.automatically_replace_with_template_string_on_typing": false,
        "JavaScript:app:JSEditorOptions.escape_pasted_text": false,
        "JavaScript:app:JSEditorOptions.escape_doc_on_copy_paste": false,
        "com.intellij:app:JsonEditorOptions.comma_on_enter": false,
        "com.intellij:app:JsonEditorOptions.comma_on_matching_braces": false,
        "com.intellij:app:JsonEditorOptions.comma_on_paste": false,
        "com.intellij:app:JsonEditorOptions.auto_quote_prop_name": false,
        "com.intellij:app:JsonEditorOptions.auto_whitespace_after_colon": false,
        "com.intellij:app:JsonEditorOptions.escape_pasted_text": false,
        "com.intellij:app:Vcs-Log-App-Settings.show_changes_from_parents": true
      }
    }
  }
}
