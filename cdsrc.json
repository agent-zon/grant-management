{
  "cds": {
    "build": {
      "tasks": [
        {
          "src": "srv",
          "for": "nodejs",
          "options": { "model": ["db", "srv", "app", "@sap/cds/srv/outbox"] }
        },
        {
          "src": ".",
          "for": "helm",
          "options": {
            "model": ["db", "srv", "app", "@sap/cds/srv/outbox", "."]
          }
        },
        {
          "src": "db",
          "for": "postgres",
          "options": { "model": ["db", "srv", "app", "@sap/cds/srv/outbox"] }
        }
      ]
    },
    "folders": {
      "authorization": "./srv/authorization-service",
      "grant-management": "./srv/grant-management-service",
      "demo": "./srv/demo-service",
      "srv": "./srv"
    },
    "typer": {
      "strictPropertyInitialization": false,
      "strictNullChecks": false,
      "allowArbitraryExtensions": true
    },
    "log": {
      "levels": {
        "sql": "error",
        "cds": "info",
        "odata": "info"
      }
    },
    "requires": {
      "auth": {
        "kind": "ias"
      },
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db.sqlite"
        }
      }
    },
    "destinations": true,
    "[development]": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db.sqlite"
        }
      },

      "auth": {
        "kind": "mocked",
        "users": {
          "alice": {
            "tenant": "t1",
            "roles": [
              "grant_management_create",
              "grant_management_update",
              "grant_management_replace",
              "grant_management_revoke",
              "grant_management_query"
            ]
          },
          "bob": {
            "tenant": "t2",
            "roles": [
              "grant_management_create",
              "grant_management_update",
              "grant_management_replace",
              "grant_management_revoke",
              "grant_management_query"
            ]
          }
        }
      }
    },
    "mocks": {
      "auth": {
        "kind": "mocked"
      }
    },
    "features": {
      "toggles": {
        "auth": true
      }
    }
  }
}
