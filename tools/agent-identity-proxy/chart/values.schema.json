{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["global", "proxy", "identity"],
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "domain": {
          "type": "string",
          "description": "Kubernetes cluster domain"
        },
        "host": {
          "type": "string",
          "description": "Hostname for the proxy service"
        },
        "imagePullSecret": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            }
          }
        },
        "image": {
          "type": "object",
          "properties": {
            "registry": {
              "type": "string",
              "description": "Docker registry"
            },
            "tag": {
              "type": "string",
              "description": "Image tag"
            }
          }
        },
        "imagePullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"]
        }
      }
    },
    "proxy": {
      "type": "object",
      "description": "Proxy service configuration",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            }
          }
        },
        "resources": {
          "type": "object"
        },
        "health": {
          "type": "object"
        },
        "env": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    },
    "identity": {
      "type": "object",
      "description": "Identity service configuration",
      "properties": {
        "serviceOfferingName": {
          "type": "string"
        },
        "servicePlanName": {
          "type": "string"
        },
        "parameters": {
          "type": "object"
        }
      }
    }
  }
}
