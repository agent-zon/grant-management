{
  "name": "grant-management",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "type": "module",
  "dependencies": {
    "@sap/cds": "^9.3.1",
    "@sap/xssec": "^4",
    "compression": "^1.8.1",
    "cross-env": "^10.0.0",
    "express": "^4.21.2",
    "isbot": "^5.1.27",
    "morgan": "^1.10.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@tailwindcss/vite": "^4.1.13",
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20",
    "cap-js-mockdata": "^0.0.3",
    "tailwindcss": "^4.1.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "scripts": {
    "start": "npx cds serve",
    "watch": "npx cds watch",
    "debug": "npx cds debug",
    "serve": "npm run serve:cds & npm run serve:approuter",
    "serve:cds": "npx cds serve --profile dev",
    "serve:hybrid": "cds bind --exec -- npm run serve",
    "serve:hybrid:approuter": "cds bind --exec -- npm run serve:approuter",
    "serve:hybrid:cds": "npm bind --exec -- cds serve",
    "serve:approuter": "node node_modules/@sap/approuter/approuter.js --workingDir app/router --port 9000",
    "build": "npx cds build --production",
    "build:containers": "ctz containerize.yaml --log",
    "build:push": "ctz containerize.yaml --log --push",
    "bind:srv": "cds bind --to-app-services router-srv --on k8s",
    "bind:router": "cds bind --to-app-services router-app --on k8s",
    "bind:auth": "cds bind ias -2 router-srv-auth --on k8s",
    "bind:destination": "cds bind -2 router-srv-destination --on k8s",
    "bind:all": "npx cds bind -2 router-srv-auth --on k8s && cds bind -2 router-srv-destination --on k8s",
    "bind:list": "npx cds bind --list",
    "bind:remove": "npx cds bind --remove",
    "setup:local": "npm run bind:all && npm run serve:hybrid",
    "setup:dev": "npm install && npm run bind:auth && npm run serve",
    "deploy": "npx cds up -2 k8s",
    "deploy:helm": "npm run build && helm upgrade v1 ./gen/chart --install --create-namespace",
    "copy-docker-secret": "./scripts/copy-docker-secret.sh",
    "setup-namespace": "./scripts/setup-namespace.sh",
    "add:approuter": "cds add approuter",
    "add:ias": "cds add ias",
    "add:xsuaa": "cds add xsuaa",
    "add:multitenancy": "cds add multitenancy",
    "add:audit": "cds add audit",
    "add:rest": "cds add rest",
    "add:odata": "cds add odata",
    "add:sql": "cds add sql",
    "add:sqlite": "cds add sqlite",
    "add:hana": "cds add hana",
    "lint": "cds lint",
    "compile": "cds compile",
    "compile:sql": "cds compile --to sql",
    "compile:java": "cds compile --to java",
    "compile:ts": "cds compile --to ts",
    "dev": "npx cds watch"
  },
  "private": true,
  "cds": {
    "requires": {
      "[production]": {
        "auth": "ias"
      },
      "destinations": true
    }
  }
}
