{
  "name": "grant-management",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "type": "module",
  "dependencies": {
    "@cap-js/cds-test": "^0.4.0",
    "@cap-js/cds-typer": "^0.38.0",
    "@cap-js/cds-types": "^0.15.0",
    "@cap-js/postgres": "^2.0.6",
    "@cap-js/sqlite": "^2",
    "@modelcontextprotocol/sdk": "^1.21.0",
    "@sap-cloud-sdk/connectivity": "^4.1.2",
    "@sap-cloud-sdk/http-client": "^4.1.2",
    "@sap/cds": "^9.3.1",
    "@sap/cds-dk": "^9.3.2",
    "@sap/cds-mtxs": "^3",
    "@sap/xssec": "^4",
    "@tailwindcss/vite": "^4.1.13",
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/mustache": "^4.2.6",
    "@types/node": "^20",
    "axios": "^1.12.2",
    "body-parser": "^2.2.0",
    "cap-js-mockdata": "^0.0.3",
    "compression": "^1.8.1",
    "cross-env": "^10.0.0",
    "express": "^4.21.2",
    "isbot": "^5.1.27",
    "jwt-decode": "^4.0.0",
    "method-override": "^3.0.0",
    "morgan": "^1.10.1",
    "mustache": "^4.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "redis": "^5.0.0",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^4.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "ulid": "^3.0.1",
    "vite": "^7.1.6",
    "vite-tsconfig-paths": "^5.1.4",
    "xstate": "^5.22.1",
    "zod": "^3.23.8"
  },
  "scripts": {
    "start": "npx cds-tsx serve",
    "watch": "npx cds-tsx watch",
    "debug": "npx cds debug ",
    "serve": "npm run serve:approuter & npm run serve:cds",
    "serve:cds": "npx cds serve --profile dev",
    "dev:approuter": "node node_modules/@sap/approuter/approuter.js --workingDir app/router --port 9000",
    "serve:approuter": "node node_modules/@sap/approuter/approuter.js --workingDir app/router --port 9000",
    "hybrid": "npx cds bind --exec -- npm run serve",
    "hybrid:approuter": "npx cds bind --exec -- npm run serve:approuter",
    "hybrid:portal": "npx cds bind --exec -- npm run dev -w portal",
    "hybrid:cds": "npx cds bind --profile hybrid --exec -- cds debug --profile hybrid",
    "hybrid:mcp-client": "npx cds bind --profile hybrid --exec -- npm run start -w examples/client",
    "build": "npx cds build --production",
    "build:containers": "ctz containerize.yaml --log",
    "build:push": "ctz containerize.yaml --log --push",
    "bind:srv": "cds bind --to-app-services v11-srv --on k8s",
    "bind:router": "cds bind --to-app-services v11-approuter --on k8s",
    "bind:auth": "cds bind ias -2 v11-identity --on k8s",
    "bind:destination": "cds bind -2 v11-destination --on k8s",
    "bind:resolve": "npx cds env requires --resolve-bindings --profile hybrid",
    "bind:list": "npx cds bind --list",
    "bind:remove": "npx cds bind --remove",
    "setup:local": "npm run bind:all && npm run serve:hybrid",
    "setup:dev": "npm install && npm run bind:auth && npm run serve",
    "deploy": "npm run build:push && npm run deploy:helm",
    "deploy:sqlite": "npx cds deploy --to sqlite --profile development",
    "deploy:helm": "npm run build && helm upgrade mtx ./gen/chart --install --create-namespace",
    "deploy:to:sqlite": "npx cds deploy --to sqlite",
    "deploy:to:postgres": "npx cds deploy",
    "copy-docker-secret": "./scripts/copy-docker-secret.sh",
    "setup-namespace": "./scripts/setup-namespace.sh",
    "add:approuter": "cds add approuter",
    "add:ias": "cds add ias",
    "add:xsuaa": "cds add xsuaa",
    "add:multitenancy": "cds add multitenancy",
    "add:audit": "cds add audit",
    "add:rest": "cds add rest",
    "add:odata": "cds add odata",
    "add:sql": "cds add sql",
    "add:sqlite": "cds add sqlite",
    "add:hana": "cds add hana",
    "lint": "cds lint",
    "compile": "cds compile",
    "openapi:generate": "cds compile srv --service all -o app/router/api-docs/openapi --to openapi",
    "openapi:fix": "node scripts/fix-openapi-tags.js",
    "compile:sql": "cds compile --to sql",
    "compile:java": "cds compile --to java",
    "compile:ts": "cds compile --to ts",
    "dev": "npx cds-tsx watch",
    "test:auth": "npx cds bind --profile hybrid --exec -- node ./tests/auth.spec.js",
    "test": "node --import tsx --test --test-concurrency=1 --experimental-vm-modules ./test/*.test.ts",
    "test:oauth": "node --import tsx --test --test-concurrency=1 --experimental-vm-modules ./test/oauth-*.test.ts",
    "test:oauth:basic": "node --import tsx --test --test-concurrency=1 --experimental-vm-modules ./test/oauth-basic-flow.test.ts",
    "test:oauth:stepup": "node --import tsx --test --test-concurrency=1 --experimental-vm-modules ./test/oauth-stepup-flow.test.ts",
    "test:grant-mgmt": "node --import tsx --test --test-concurrency=1 --experimental-vm-modules ./test/grant-management.test.ts"
  },
  "workspaces": [
    "app/*",
    "mtx/sidecar/mtx/*"
  ],
  "private": true,
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js",
    "#cds-ssr": "./srv/render/index.js",
    "@/*": "./srv/*",
    "@types": "./types/index.d.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "cds": {
    "profile": "with-mtx-sidecar",
    "requires": {
      "[production]": {
        "auth": {
          "kind": "ias"
        },
        "multitenancy": true,
        "db": {
          "kind": "sqlite",
          "credentials": {
            "url": "db.sqlite"
          }
        }
      }
    }
  }
}
