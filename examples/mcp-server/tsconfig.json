{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDirs": [".", "@cds-models", "types"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "#cds-models/*": [
        "./@cds-models/*"
      ],
      "@cds-ssr": [
        "./render/index.ts"
      ]
    }
  }
}
