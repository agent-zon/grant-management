{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDirs": [
      ".",
      "@cds-models",
      "types"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "composite": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "noImplicitAny": false,
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "#cds-models/*": [
        "./@cds-models/*"
      ],
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "types/**/*",
    "srv/**/*",
    "@cds-models/**/*"
  ],
  "exclude": [
    "node_modules",
    "gen",
    "dist",
    "**/*.js"
  ]
}
